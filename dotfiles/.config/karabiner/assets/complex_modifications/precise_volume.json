{
  "title": "Precise volume",
  "rules": [
    {
      "description": "Precisely adjust volume for macOS",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "volume_decrement"
          },
          "to": {
            "key_code": "volume_decrement",
            "modifiers": ["left_shift", "left_option"]
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "volume_increment"
          },
          "to": {
            "key_code": "volume_increment",
            "modifiers": ["left_shift", "left_option"]
          }
        }
      ]
    }
  ]
}
